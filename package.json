{
  "private": true,
  "name": "concatenate-for-ai",
  "displayName": "Concatenate for AI",
  "description": "Export codebase context for LLMs (ChatGPT, Claude, Copilot). Concatenates files & folders into Markdown with file trees and .gitignore support.",
  "version": "0.4.9",
  "publisher": "IonSignal",
  "homepage": "https://github.com/ionsignal/vscode.concatenate.ai/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/ionsignal/vscode.concatenate.ai/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ionsignal/vscode.concatenate.ai.git"
  },
  "license": "MIT",
  "author": {
    "name": "Oliver Dyla",
    "email": "neutrino84@gmail.com",
    "url": "https://ionsignal.com"
  },
  "pricing": "Free",
  "engines": {
    "vscode": "^1.100.0"
  },
  "icon": "assets/icon.png",
  "categories": [
    "Other",
    "Formatters",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "markdown",
    "concatenate",
    "chatgpt",
    "claude",
    "copilot",
    "llm",
    "prompt",
    "context",
    "codebase",
    "export",
    "merge"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Concatenate for AI",
      "properties": {
        "concatenate.prependFileHierarchy": {
          "type": "boolean",
          "default": false,
          "description": "Prepend an ASCII tree diagram of the file hierarchy at the top of the document.",
          "scope": "resource"
        },
        "concatenate.recursiveSearchFileExtensions": {
          "type": "array",
          "default": [
            "md",
            "mdx",
            "ts",
            "js",
            "tsx",
            "jsx",
            "json",
            "py",
            "go",
            "rs",
            "java"
          ],
          "description": "File extensions to include when recursively concatenating directories.",
          "scope": "resource",
          "items": {
            "type": "string"
          }
        },
        "concatenate.noFenceExtensions": {
          "type": "array",
          "default": [
            "md",
            "mdx",
            "txt"
          ],
          "description": "Extensions that should NOT be wrapped in code blocks (rendered as raw text separated by horizontal rules).",
          "scope": "resource",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "commands": [
      {
        "command": "concatenate.explorerFilesAsNewDocument",
        "title": "Concatenate for AI: Selected Files"
      },
      {
        "command": "concatenate.explorerDirectoryAsNewDocument",
        "title": "Concatenate for AI: Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "concatenate.explorerFilesAsNewDocument",
          "when": "explorerResourceIsFolder == false",
          "group": "concatenate@1"
        },
        {
          "command": "concatenate.explorerDirectoryAsNewDocument",
          "when": "explorerResourceIsFolder == true",
          "group": "concatenate@1"
        }
      ]
    }
  },
  "scripts": {
    "build:package": "vsce package",
    "vscode:prepublish": "npm run clean && npm run compile",
    "compile": "npm run clean && mkdir -p ./out/ && tsc -p ./",
    "watch": "npm run clean && mkdir -p ./out/ && tsc -watch -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rimraf ./out"
  },
  "dependencies": {
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@types/node": "25.2.1",
    "@types/vscode": "1.100.0",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vscode/vsce": "3.7.1",
    "eslint": "9.39.2",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "typescript": "5.9.3"
  }
}
